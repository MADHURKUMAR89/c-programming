#include <stdio.h>

int main() {
    char str[100];
    int i = 0;

    printf("Enter a lowercase string: ");
    fgets(str, sizeof(str), stdin); 

    while (str[i] != '\0') {
        // Stop at newline (added by fgets)
        if (str[i] == '\n')
            break;

        // Check if character is lowercase (aâ€“z)
        if (str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - 32; 
          
        }

        i++;
    }

    printf("Uppercase string: %s", str);

    return 0;
}
