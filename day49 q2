#include <stdio.h>
#include <string.h>

int main() {
    char name[100];
    int i = 0, lastSpace = -1;

    printf("Enter your full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove newline character if present
    for (i = 0; name[i] != '\0'; i++) {
        if (name[i] == '\n') {
            name[i] = '\0';
            break;
        }
    }

    // Find the last space (before surname)
    lastSpace = -1;
    for (i = 0; name[i] != '\0'; i++) {
        if (name[i] == ' ') {
            lastSpace = i;
        }
    }

    
    if (name[0] != ' ') {
        printf("%c", name[0]);
    }

    for (i = 0; i <= lastSpace; i++) {
        if (name[i] == ' ' && name[i+1] != ' ' && i+1 <= lastSpace) {
            printf("%c", name[i+1]);
        }
    }

   #include <stdio.h>
#include <string.h>

int main() {
    char name[100];
    int i = 0, lastSpace = -1;

    printf("Enter your full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove newline character if present
    for (i = 0; name[i] != '\0'; i++) {
        if (name[i] == '\n') {
            name[i] = '\0';
            break;
        }
    }

    // Find the last space (before surname)
    lastSpace = -1;
    for (i = 0; name[i] != '\0'; i++) {
        if (name[i] == ' ') {
            lastSpace = i;
        }
    }

    // Print initials for first and middle names
    if (name[0] != ' ') {
        printf("%c", name[0]);
    }

    for (i = 0; i <= lastSpace; i++) {
        if (name[i] == ' ' && name[i+1] != ' ' && i+1 <= lastSpace) {
            printf("%c", name[i+1]);
        }
    }

    // Print full surname
    if (lastSpace != -1) {
        printf(" "); // space before surname
        printf("%s", &name[lastSpace + 1]);
    }

    printf("\n");
    return 0;
}

    if (lastSpace != -1) {
        printf(" "); // space before surname
        printf("%s", &name[lastSpace + 1]);
    }

    printf("\n");
    return 0;
}
