#include <stdio.h>
#include <math.h>

int main() {
    int n;
    printf("Enter a positive integer n: ");
    scanf("%d", &n);


    int totalSum = n * (n + 1) / 2;

   
    int x = (int)sqrt(totalSum);

    if (x * x == totalSum)
        printf("Pivot Integer: %d\n", x);
    else
        printf("Pivot Integer: -1\n");

    return 0;
}
