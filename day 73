#include <stdio.h>
#include <ctype.h>

int main() {
    FILE *fp;
    char ch;
    int characters = 0, words = 0, lines = 0;
    int inWord = 0;  // Flag to detect if we are currently inside a word

    fp = fopen("info.txt", "r");
    if (fp == NULL) {
        printf("Error: Could not open the file.\n");
        return 1;
    }

    while ((ch = fgetc(fp)) != EOF) {
        characters++;

       
        if (ch == '\n') {
            lines++;
        }

 
        if (!isspace(ch)) {
            if (inWord == 0) {
                inWord = 1;
                words++;
            }
        } else {
            inWord = 0;
        }
    }

    fclose(fp);

   
    if (characters > 0 && ch != '\n') {
        lines++; 
    }

    printf("Total Characters: %d\n", characters);
    printf("Total Words: %d\n", words);
    printf("Total Lines: %d\n", lines);

    return 0;
}
