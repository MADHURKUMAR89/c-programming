#include <stdio.h>

int main() {
    int n, sum = 0, i;


    printf("Enter a positive integer n: ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive integer greater than 0.\n");
    } else {
        // Sum the first n odd numbers
        for (i = 1; i <= n; i++) {
            sum += 2 * i - 1; // ith odd number = 2*i - 1
        }

        printf("Sum of the first %d odd numbers = %d\n", n, sum);
    }

    return 0;
}
