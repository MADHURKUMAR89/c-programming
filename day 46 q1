#include <stdio.h>

int main() {
    char str[200];
    int i = 0, j = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);  // safe input method


    while (str[i] != '\0') {
        char ch = str[i];


        if (ch == '\n') {
            break;
        }

        if (!(ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
              ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U')) {
            str[j] = str[i];
            j++;
        }
        i++;
    }

    str[j] = '\0';  // terminate the new string

    printf("String after removing vowels: %s\n", str);

    return 0;
}
